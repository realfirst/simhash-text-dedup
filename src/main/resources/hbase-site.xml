<configuration>
  <property>
    <name>hbase.rootdir</name>
    <value>hdfs://hadoop-master-83:9900/hbase</value>
  </property>
  <property>
  <name>hbase.master</name>
  <value>hadoop-master-83</value>
  </property>
  <property>
    <name>hbase.master.port</name>
    <value>60000</value>
  </property>
  <property>
    <name>hbase.regionserver.port</name>
    <value>60020</value>
  </property>
  <property>
    <name>hbase.cluster.distributed</name>
    <value>true</value>
  </property>
  <property>
   <name>hbase.zookeeper.quorum</name>
     <value>hadoop-slave-93,hadoop-slave-94,hadoop-slave-95,hadoop-slave-96,hadoop-slave-99</value>
  </property>
  <property>
    <name>zookeeper.session.timeout</name>
    <value>18000000</value>
  </property>
  <property>
    <name>hbase.zookeeper.property.clientPort</name>
    <value>2181</value>
  </property>
  <property>    
    <name>hbase.regionserver.codecs</name>
    <value>snappy</value>  
  </property>
  <!--increase scan time out period ms -->
  <property>
    <name>hbase.regionserver.lease.period</name>
    <value>120000</value>
  </property>
</configuration>